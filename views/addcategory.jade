extends layout

block content
    h1 Add Category
    p Please create a new category using the form below
    br

    ul.errors
        if errors
            each error, i in errors
                li.alert.alert-danger #{error.msg}

    form(method='post', action='/categories/add')
        .row
            .col-md-3
                .form-group
                    label Category Name
                    input.form-control(type='text', name='categoryName', value=categoryName)
        button.btn.btn-info(type='submit') Save

    hr
    h4 Available Categories
    div.content
        table.table.table-striped(style='width:30%')
            tbody
                each category in categories
                    tr
                        td= category.name